/**
 * The EMRGLSRECORD structure contains members for an enhanced metafile record generated by OpenGL functions. It contains data for OpenGL functions that scale automatically to the OpenGL viewport.
 * @see https://docs.microsoft.com/windows/win32/api//wingdi/ns-wingdi-emrglsrecord
 * @namespace Windows.Win32.Graphics.Gdi
 * @version v4.0.30319
 */
class EMRGLSRECORD extends Win32Struct
{
    static sizeof => 16

    static packingSize => 8

    /**
     * The base structure for all records.
     * @type {EMR}
     */
    emr{
        get {
            if(!this.HasProp("__emr"))
                this.__emr := EMR(0, this)
            return this.__emr
        }
    }

    /**
     * Size of <b>Data</b>, in bytes.
     * @type {Integer}
     */
    cbData {
        get => NumGet(this, 8, "uint")
        set => NumPut("uint", value, this, 8)
    }

    /**
     * Array of data representing the OpenGL function to be performed.
     * @type {Array<Byte>}
     */
    Data{
        get {
            if(!this.HasProp("__DataProxyArray"))
                this.__DataProxyArray := Win32FixedArray(this.ptr + 12, 1, Primitive, "char")
            return this.__DataProxyArray
        }
    }
}
